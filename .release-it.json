{
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "git": {
    "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template ./preview.hbs"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CCHANGELOG.md"
    }
  }
}
